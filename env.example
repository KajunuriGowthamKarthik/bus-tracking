# ============================
# Database Configuration
# ============================
# Use your Render Postgres connection string here
DATABASE_URL=postgresql://render_user:render_password@render_host:5432/render_dbname
TEST_DATABASE_URL=sqlite:///./bus_tracking_test.db

# ============================
# JWT Authentication
# ============================
SECRET_KEY=super-secret-key-change-this   # generate a strong random string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================
# Redis (optional, if using Upstash or Render Redis)
# ============================
# Example: redis://default:password@host:6379
REDIS_URL=redis://localhost:6379/0

# ============================
# Application Settings
# ============================
APP_NAME=SmartTransit Bus Tracking
APP_VERSION=1.0.0
DEBUG=False
CORS_ORIGINS=["https://your-frontend.netlify.app","http://localhost:3000"]

# ============================
# College / Institution
# ============================
COLLEGE_NAME=Your College Name
COLLEGE_COORDINATES_LAT=12.9716
COLLEGE_COORDINATES_LNG=77.5946
COLLEGE_RADIUS_KM=5.0

# ============================
# Real-time Tracking
# ============================
TRACKING_UPDATE_INTERVAL_SECONDS=10
LOCATION_ACCURACY_THRESHOLD_METERS=50

# ============================
# Notifications (optional)
# ============================
ENABLE_PUSH_NOTIFICATIONS=True
FCM_SERVER_KEY=your-firebase-server-key

# ============================
# File Uploads
# ============================
MAX_FILE_SIZE_MB=5
UPLOAD_DIRECTORY=uploads/
