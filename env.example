# Database
DATABASE_URL=postgresql://<render-user>:<password>@<render-host>:5432/<dbname>

# JWT
SECRET_KEY=super-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis (if using external service, e.g. Upstash)
REDIS_URL=redis://:<password>@<upstash-host>:6379

# App
APP_NAME=SmartTransit Bus Tracking
APP_VERSION=1.0.0
DEBUG=False
CORS_ORIGINS=["https://your-frontend.netlify.app"]

# College
COLLEGE_NAME=Your College Name
COLLEGE_COORDINATES_LAT=12.9716
COLLEGE_COORDINATES_LNG=77.5946
COLLEGE_RADIUS_KM=5.0

# Tracking
TRACKING_UPDATE_INTERVAL_SECONDS=10
LOCATION_ACCURACY_THRESHOLD_METERS=50

# Notifications
ENABLE_PUSH_NOTIFICATIONS=True
FCM_SERVER_KEY=your-firebase-server-key

# File Uploads
MAX_FILE_SIZE_MB=5
UPLOAD_DIRECTORY=uploads/
